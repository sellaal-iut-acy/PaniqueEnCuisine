<UserControl x:Class="PaniqueEnCuisine.UCMenuSkin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Images/image_fond_MenuSkin1.png" Stretch="Fill"/>
        <Button x:Name="B_Retour" Content="Retour" HorizontalAlignment="Left" Margin="620,10,0,0" VerticalAlignment="Top" Height="35" Width="170" FontSize="20" Background="#FF894218" BorderBrush="#FF39150B" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Retour_Click"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Boutons skins -->
            <StackPanel Grid.Column="0" Margin="20">
                <Button Content="Prototype" Click="SkinPrototype_Click"/>
                <Button Content="Chef" Click="SkinChef_Click"/>
            </StackPanel>

            <!-- Preview + Select -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Image x:Name="ImagePreview"
               Width="200"
               Height="200"
               Stretch="Uniform"/>

                <Button Content="Sélectionner"
                Margin="0,20,0,0"
                Width="150"
                Click="SelectSkin_Click"/>

            </StackPanel>
        </Grid>



    </Grid>
</UserControl>
