<UserControl x:Class="PaniqueEnCuisine.UCGameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="#FFAB4141"/>
        
        <Label Content="Game Over" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Foreground="Black" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" Margin="0,61,0,0"/>

        <TextBlock Text="Vous avez échoué à compléter la recette à temps !" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Foreground="Black" Width="500" Margin="0,174,0,0" TextAlignment="Center" FontFamily="OCR A Extended"/>

        <Button x:Name="B_RetourMenu" Content="Retour Menu" Height="35" Width="170" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_RetourMenu_Click" HorizontalAlignment="Center" Canvas.Left="315" Canvas.Top="10" VerticalAlignment="Top" Margin="0,311,0,0"/>
        <Button x:Name="B_Quitter" Content="Quitter" Height="35" Width="170" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Quitter_Click" HorizontalAlignment="Center" Canvas.Left="315" Canvas.Top="60" VerticalAlignment="Top" Margin="0,359,0,0"/>

    </Grid>
</UserControl>
