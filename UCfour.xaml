<UserControl x:Class="PaniqueEnCuisine.UCfour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="canvas" RenderTransformOrigin="0.5,0.5" >
        <!-- Ligne principale -->
        <Line X1="20" Y1="50" X2="150" Y2="50"
          Stroke="Black"
          StrokeThickness="3" Canvas.Left="290" Canvas.Top="181"/>

        <!-- Pointe de flèche -->
        <Path Fill="Black"
          Data="M 150 50 L 135 40 L 135 60 Z" Canvas.Left="305.25" Canvas.Top="181" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <!--
        M → MoveTo (déplacer le stylo)
        L → LineTo (dessiner une ligne)
        Z → Close (fermer la forme)
        -->
        <Button x:Name="B_Retour" Content="Cuirre" Height="35" Width="170" FontSize="20" Background="#FF894218" BorderBrush="#FF39150B" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_cuirre" HorizontalAlignment="Left" Canvas.Left="305" Canvas.Top="295" VerticalAlignment="Top" />
    </Canvas>
</UserControl>
