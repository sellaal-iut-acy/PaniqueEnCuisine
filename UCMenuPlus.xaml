<UserControl x:Class="PaniqueEnCuisine.UCParametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Images/Image_fond_parametres.png" Stretch="Fill"/>

        <Button x:Name="B_Retour" Content="Retour" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Height="35" Width="170" FontSize="20" Background="#FF894218" BorderBrush="#FF39150B" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Retour_Click"/>
        <Button x:Name="B_Settings_Son" Content="" HorizontalAlignment="Left" Margin="-61,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.732,3.657" Height="85" Width="97" BorderThickness="1,1,1,1" Click="ButtonSettingsSon_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="29.261"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/Images/image_logo_settings.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="B_Settings_Skin" Content="" HorizontalAlignment="Left" Margin="240,250,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.732,3.657" Height="60" Width="92" BorderThickness="1,1,1,1" Click="ButtonSettingsSkin_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/image_logo_settings_skin.png"/>
            </Button.Background>
        </Button>

        <Button x:Name="B_Settings_Niveaux" Content="" HorizontalAlignment="Left" Margin="388,253,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.732,3.657" Height="60" Width="78" BorderThickness="1,1,1,1" Click="ButtonSettingsLevel_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/image_logo_settings_niveau.png"/>
            </Button.Background>

        </Button>

    </Grid>
</UserControl>
