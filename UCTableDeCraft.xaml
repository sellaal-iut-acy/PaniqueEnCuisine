<UserControl x:Class="PaniqueEnCuisine.UCTableDeCraft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="450" Stroke="#FF39150B" VerticalAlignment="Center" Width="800" Fill="#FF894218" StrokeThickness="5"/>

        <Rectangle Height="350"
           Fill="#BF524D4B"
           Stroke="#FF2F2B2A"
           StrokeThickness="5" Margin="400,50,50,50"/>

        <ScrollViewer Height="350" VerticalScrollBarVisibility="Auto" Margin="400,50,50,50">
            <StackPanel x:Name="listeRecette" Margin="15">

                <StackPanel Orientation="Horizontal" Height="137" Background="#FF444343">
                    <Image Source="/Images/food/burger.png" Height="61" Width="73" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="Burger" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Ingrédients nécessaires :" FontSize="18" Foreground="White" Margin="0,10,0,0"/>
                        <TextBlock Text="- Pain (1)" FontSize="16" Foreground="White"/>
                        <TextBlock Text="- Viande (1)" FontSize="16" Foreground="White"/>
                        <TextBlock Text="- Fromage (1)" FontSize="16" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Cuisiner" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="Button_Cuisiner_Burger_Click" Margin="0,0,0,20"/>


                <StackPanel Orientation="Horizontal" Height="137" Background="#FF444343">
                    <Image Source="/Images/food/burger.png" Height="61" Width="73" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="Burger" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Ingrédients nécessaires :" FontSize="18" Foreground="White" Margin="0,10,0,0"/>
                        <TextBlock Text="- Pain (1)" FontSize="16" Foreground="White"/>
                        <TextBlock Text="- Viande (1)" FontSize="16" Foreground="White"/>
                        <TextBlock Text="- Fromage (1)" FontSize="16" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Cuisiner" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="Button_Cuisiner_Pizza_Click" Margin="0,0,0,20"/>


                <StackPanel Orientation="Horizontal" Height="137" Background="#FF444343">
                    <Image Source="/Images/food/burger.png" Height="61" Width="73" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="Burger" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Ingrédients nécessaires :" FontSize="18" Foreground="White" Margin="0,10,0,0"/>
                        <TextBlock Text="- Pain (1)" FontSize="16" Foreground="White"/>
                        <TextBlock Text="- Viande (1)" FontSize="16" Foreground="White"/>
                        <TextBlock Text="- Fromage (1)" FontSize="16" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Cuisiner" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="Button_Cuisiner_Burger_Click" Margin="0,0,0,20"/>



            </StackPanel>
                



        </ScrollViewer>
        <Button x:Name="B_Fermer" Content="Fermer" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Fermer_Click" Margin="315,10,315,405"/>
    </Grid>
</UserControl>