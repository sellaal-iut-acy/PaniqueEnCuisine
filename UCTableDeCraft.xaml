<UserControl x:Class="PaniqueEnCuisine.UCTableDeCraft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="450" Stroke="#FF39150B" VerticalAlignment="Center" Width="800" Fill="#FF894218" StrokeThickness="5"/>

        <Rectangle Height="350"
           Fill="#BF524D4B"
           Stroke="#FF2F2B2A"
           StrokeThickness="5" Margin="400,50,50,50"/>

        <ScrollViewer Height="350"
              VerticalScrollBarVisibility="Auto" Margin="400,50,50,50">

            <StackPanel Margin="15">
                <Button Content="Button"/>

            </StackPanel>

        </ScrollViewer>
        <Button x:Name="B_Fermer" Content="Fermer" FontSize="20" Background="Gray" BorderBrush="#FF444343" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Fermer_Click" Margin="315,10,315,405"/>
    </Grid>
</UserControl>