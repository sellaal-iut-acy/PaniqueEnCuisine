<UserControl x:Class="PaniqueEnCuisine.UCCaisse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="450">

    <Grid Background="#CC000000">

        <Border Width="600"
                Height="380"
                Background="#222222"
                CornerRadius="12"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ================= TITRE ================= -->
                <TextBlock Text="🧾 Commande en cours"
                           FontSize="26"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- ================= COMMANDE ================= -->
                <StackPanel x:Name="CommandePanel"
                            Grid.Row="1"/>

                <!-- ================= FOOTER ================= -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- TIMER -->
                    <TextBlock x:Name="TxtTimer"
                               Grid.Column="0"
                               FontSize="20"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- BOUTONS -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <Button Content="Valider"
                                Width="120"
                                Margin="0,0,10,0"
                                Click="Valider_Click"/>

                        <Button Content="Fermer"
                                Width="120"
                                Click="Fermer_Click"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
