<UserControl x:Class="PaniqueEnCuisine.UCCaisse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="450">

    <Grid Background="#AA000000">
        <Border Width="400" Height="250"
                Background="#FFF5E6"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock Text="Caisse enregistreuse"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <Button Content="Encaisser"
                        Height="40"
                        Margin="0,0,0,10"/>

                <Button Content="Fermer"
                        Height="40"
                        Click="Fermer_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
