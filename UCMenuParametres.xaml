<UserControl x:Class="PaniqueEnCuisine.UCMenuSon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Images/image_fond_MenuSon.jpg" Stretch="Fill"/>


        <Rectangle HorizontalAlignment="Center" Height="67" Margin="0,142,0,0" Stroke="#FF39150B" VerticalAlignment="Top" Width="473" Fill="#FF894218" StrokeThickness="5"/>
        <Image Margin="164,146,544,245" Source="/Images/image_logo_settings_touches.png" Stretch="Fill"/>

        <Rectangle HorizontalAlignment="Center" Height="67" Margin="0,242,0,0" Stroke="#FF39150B" VerticalAlignment="Top" Width="472" Fill="#FF894218" StrokeThickness="5"/>
        <Image Margin="172,251,578,149" Source="/Images/image_logo_settings_son.png" Stretch="Fill" Width="50" Height="50"/>


        <Button x:Name="B_Retour" Content="Retour" HorizontalAlignment="Center" Margin="0,343,0,0" VerticalAlignment="Top" Height="35" Width="170" FontSize="20" Background="#FF894218" BorderBrush="#FF39150B" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Retour_Click"/>
        <Button x:Name="B_Settings_Touches" Content="Clavier" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" Height="35" Width="300" FontSize="20" Background="Gray" BorderBrush="#FF3A373E" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Touches_Click"/>
        <Button x:Name="B_Settings_Son" Content="Audio" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Height="35" Width="300" FontSize="20" Background="Gray" BorderBrush="#FF3A373E" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold" Click="B_Son_Click"/>


    </Grid>
</UserControl>
