<UserControl x:Class="PaniqueEnCuisine.UCMenuRegles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">

    <Grid>
        <!-- Fond -->
        <Image Source="/Images/image_fond_MenuRegles.png" Stretch="Fill"/>

        <!-- Rectangle + Contenu des règles -->
        <Grid HorizontalAlignment="Center" Margin="0,60,0,0">

            <!-- Fond du panneau -->
            <Rectangle Height="350"
                       Width="700"
                       Fill="#D8894218"
                       Stroke="#FF39150B"
                       StrokeThickness="5"/>

            <!-- Contenu scrollable -->
            <ScrollViewer Height="350"
                          Width="700"
                          VerticalScrollBarVisibility="Auto">

                <StackPanel Margin="15">

                    <!-- Titre -->
                    <TextBlock Text="Règles du jeu"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 20"/>

                    <!-- Objectif -->
                    <TextBlock Text="Objectif"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 10"/>

                    <TextBlock Text="Préparer et livrer les plats demandés avant la fin du temps imparti."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 20"/>

                    <!-- Comment jouer -->
                    <TextBlock Text="Comment jouer"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 10"/>

                    <TextBlock Text="1️ Ouvre la caisse"
                               FontSize="18"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="• Consulte la commande à préparer et le temps restant."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="20 0 0 10"/>

                    <TextBlock Text="2 Récupère les aliments"
                               FontSize="18"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="• Prends les ingrédients nécessaires dans le frigo."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="20 0 0 10"/>

                    <TextBlock Text="3️ Prépare le plat"
                               FontSize="18"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="• Fais cuire les aliments si besoin, puis cuisine le plat."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="20 0 0 10"/>

                    <TextBlock Text="4️ Livre la commande"
                               FontSize="18"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="• Retourne à la caisse et valide la commande avant la fin du temps."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="20 0 0 20"/>

                    <!-- Attention -->
                    <TextBlock Text="Attention"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               FontFamily="OCR A Extended"
                               Margin="0 10 0 10"/>

                    <TextBlock Text="Si le temps atteint zéro avant la validation de la commande : GAME OVER."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="Red"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 20"/>

                </StackPanel>

            </ScrollViewer>
        </Grid>

        <!-- Bouton retour -->
        <Button x:Name="B_Retour"
                Content="X"
                HorizontalAlignment="Left"
                Margin="726,60,0,0"
                VerticalAlignment="Top"
                Height="45"
                Width="45"
                FontSize="20"
                Background="#FF894218"
                BorderBrush="#FF39150B"
                BorderThickness="5"
                FontFamily="OCR A Extended"
                FontWeight="Bold"
                Click="B_Retour_Click"/>
    </Grid>
</UserControl>
