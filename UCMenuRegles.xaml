<UserControl x:Class="PaniqueEnCuisine.UCMenuRegles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">


    <Grid>
        <!-- Fond -->
        <Image Source="/Images/image_fond_MenuRegles.png" Stretch="Fill"/>

        <!-- Rectangle + Contenu des règles -->
        <Grid HorizontalAlignment="Center" Margin="0,60,0,0">
            <!-- Fond du panneau -->
            <Rectangle Height="350"
                       Width="700"
                       Fill="#BF894218"
                       Stroke="#FF39150B"
                       StrokeThickness="5"/>

            <!-- Contenu scrollable -->
            <ScrollViewer Height="350"
                          Width="700"
                          VerticalScrollBarVisibility="Auto">

                <StackPanel Margin="15">

                    <TextBlock Text="Règles du jeu"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="But du jeu"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 10"/>

                    <TextBlock Text="Servir un maximum de clients sans te faire dépasser..."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="Comment jouer"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 10"/>

                    <TextBlock Text="• Prends un ingrédient, prépare-le..."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="• Assemble la commande et sers le client."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="• Un seul objet dans la main."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 5"/>

                    <TextBlock Text="Attention"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 10 0 10"/>

                    <TextBlock Text="Incendies, vols, clients impatients : GAME OVER."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="#C0392B"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="Progresser"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"
                               Margin="0 0 0 10"/>

                    <TextBlock Text="Gagne de l'argent, améliore ton restaurant, débloque des niveaux."
                               FontSize="16"
                               TextWrapping="Wrap"
                               Foreground="#FF39150B"
                               FontFamily="OCR A Extended"/>
                </StackPanel>

            </ScrollViewer>
        </Grid>

        <!-- Bouton retour -->
        <Button x:Name="B_Retour"
                Content="X"
                HorizontalAlignment="Left"
                Margin="727,31,0,0"
                VerticalAlignment="Top"
                Height="45"
                Width="45"
                FontSize="20"
                Background="#FF894218"
                BorderBrush="#FF39150B"
                BorderThickness="5"
                FontFamily="OCR A Extended"
                FontWeight="Bold"
                Click="B_Retour_Click"/>
    </Grid>
</UserControl>
