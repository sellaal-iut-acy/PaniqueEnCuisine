<UserControl x:Class="PaniqueEnCuisine.UCParametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaniqueEnCuisine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Images/Image_fond_parametres.png" Stretch="Fill"/>

        <Button x:Name="B_Retour" Content="Retour" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Height="35" Width="170" FontSize="20" Background="#FF894218" BorderBrush="#FF39150B" BorderThickness="5,5,5,5" FontFamily="OCR A Extended" FontWeight="Bold"/>
        <Image x:Name="Image_Settings_Son" Margin="113,225,527,65" Source="/Images/image_logo_settings_son.png" Stretch="Fill" Width="160" Height="160"/>
        <Image x:Name="Image_Settings_Skin" Margin="355,225,315,95" Source="/Images/image_logo_settings_skin.png" Stretch="Fill" Width="130" Height="130"/>
        <Button x:Name="B_Settings_Son" Content="" HorizontalAlignment="Left" Margin="152,266,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.732,3.657" Height="68" Width="82" BorderThickness="1,1,1,1" Click="ButtonSettingsSon_Click" Background="{x:Null}"></Button>
        <Button x:Name="B_Settings_Skin" Content="" HorizontalAlignment="Left" Margin="376,259,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.732,3.657" Height="60" Width="92" BorderThickness="1,1,1,1" Click="ButtonSettingsSkin_Click" Background="{x:Null}"></Button>

    </Grid>
</UserControl>
